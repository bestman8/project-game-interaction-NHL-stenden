<Window x:Class="project_1_game_inteact.Spel_scherm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project_1_game_inteact"
        mc:Ignorable="d"
        Title="Spel_scherm" Height="398" Width="848" MinHeight="250" MinWidth="600"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1121*"/>
            <ColumnDefinition Width="167*"/>
        </Grid.ColumnDefinitions>
        <Grid Margin="10,10,10,90" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="29*"/>
                <ColumnDefinition Width="127*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="39*"/>
                <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>
            <Grid Grid.ColumnSpan="2" Margin="10,10,20,-72" Grid.RowSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <!-- Left Canvas -->
                    <ColumnDefinition Width="35" />
                    <!-- Spacer -->
                    <ColumnDefinition Width="*" />
                    <!-- Right Canvas -->
                </Grid.ColumnDefinitions>

                <Label x:Name="Speler_naam_1" Content="speler 1 naam" HorizontalAlignment="center" Margin="0,0,0,0" VerticalAlignment="Top" Width="96" Grid.Column="0"/>
                <Label x:Name="Speler_naam_2_" Content="speler 2 naam" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" Width="96" Grid.Column="2"/>

                <Canvas Name="LeftCanvas" Background="LightBlue" HorizontalAlignment="Stretch" Grid.Column="0" Margin="0,35,0,35"></Canvas>
                <Canvas Name="RightCanvas" Background="LightCoral" HorizontalAlignment="Stretch" Grid.Column="2" Margin="0,35,0,35"></Canvas>

            </Grid>

        </Grid>
        <Grid VerticalAlignment="Bottom" Margin="0,0,0,16" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button x:Name="Upgrades_button" Content="Upgrades" HorizontalAlignment="Center" VerticalAlignment="Top" Height="30" Width="113" Grid.Column="0" Click="Upgrades_button_Click"/>
            <Button x:Name="Startscherm_button" Content="Startscherm" HorizontalAlignment="Center" Width="112" Grid.Column="1" Click="Startscherm_button_Click"/>
            <Button x:Name="Levels_button" Content="Levels" HorizontalAlignment="Center" VerticalAlignment="Top" Height="30" Width="113" Grid.Column="2" Click="Levels_button_Click"/>
        </Grid>

    </Grid>
</Window>
