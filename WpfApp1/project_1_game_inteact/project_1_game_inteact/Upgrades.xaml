<Window x:Class="project_1_game_inteact.Upgrades"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project_1_game_inteact"
        mc:Ignorable="d"
        Title="Upgrades" Height="450" Width="800">
    <Grid Margin="0,-18,-11,0" x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="46.84" x:Name="Grid1"></RowDefinition>
            <RowDefinition Height="82.533"/>
            <RowDefinition Height="56.867"/>
            <RowDefinition Height="263.76"/>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="800"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Image Source="\resources\Images\Upgrades\Garage.jpg" Stretch="Fill" Grid.RowSpan="4" Grid.ColumnSpan="2" Margin="0,0,0,0"/>
        <Button x:Name="Startscherm" Margin="265,49,435,33" Click="StartschermClick" Background="LightGray" Foreground="White" Grid.Column="1" Content="Startscherm" Grid.RowSpan="2" Grid.Row="1"/>
        <Button x:Name="Levels_Knop" Margin="427,49,273,33" Click="LevelsClick" Background="LightGray" Foreground="White" Grid.Column="1" Content="Levels" Grid.RowSpan="2" Grid.Row="1"/>
        <Label x:Name="GeldSpeler1" Foreground="White" Margin="627,23,10,82" Background="LightGray" Grid.Column="1" Grid.RowSpan="2"/>
        <Label x:Name="GeldSpeler2" Foreground="White" Margin="627,7,10,47" Background="LightGray" Grid.Column="1" Grid.Row="1" RenderTransformOrigin="0.486,1.027"/>
        <Label x:Name="UpgradesTitel" Foreground="Black" Margin="279,6,290,31" Content="Upgrades" FontSize="50" Grid.Column="1" Grid.RowSpan="2"/>
        <Button x:Name="Speler_1_Knop" Background="LightGray" Grid.Column="1" Margin="27,40,648,42" Click="SpelerClick" Foreground="White" Grid.RowSpan="2"/>
        <Button x:Name="Speler_2_Knop" Background="LightGray" Grid.Column="1" Margin="28,40,648,47" Click="SpelerClick" IsEnabled="False" Foreground="White" Grid.RowSpan="2" Grid.Row="1"/>

        <Label x:Name="Suspensie_info" Margin="619,186,48,36" Background="LightGray" Foreground="white" Grid.Column="1" Grid.Row="3" Visibility="Hidden">
            <AccessText  TextWrapping="WrapWithOverflow" Text="Verlies minder snelheid als je de grond raakt."/>
        </Label>
        <Label x:Name="Motor_Info" Margin="201,186,474,36" Background="LightGray" Foreground="white" Grid.Column="1" Grid.Row="3" Visibility="Hidden">
            <AccessText TextWrapping="WrapWithOverflow" Text="Verhoog je maximale snelheid."/>
        </Label>
        <Label x:Name="Wiel_info" Margin="449,186,226,36" Background="LightGray" Foreground="white" Grid.Column="1" Grid.Row="3" Visibility="Hidden">
            <AccessText TextWrapping="WrapWithOverflow" Text="Verhoog je versnelling."/>
        </Label>
        <Label x:Name="Lichaam_Info" Margin="28,186,651,36" Background="LightGray" Foreground="white" Grid.Column="1" Grid.Row="3" Visibility="Hidden">
            <AccessText TextWrapping="WrapWithOverflow" Text="Vebruik minder brandstof." Width="111"/>
        </Label>
        <Button  x:Name="P1M" Background="LightGray" Foreground="White" Margin="89,96,587,101" Grid.Column="1" Click="P1M_Click" Grid.Row="3"/>
        <Button  x:Name="P1W" Background="LightGray" Foreground="White" Margin="337,96,337,101" Grid.Column="1" Click="P1W_Click" Grid.Row="3"/>
        <Button  x:Name="P1S" Background="LightGray" Foreground="White" Margin="575,96,91,101" Grid.Column="1" Click="P1S_Click" Grid.Row="3" />

        <Image Source="\resources\Images\Upgrades\AutoMunt.png" Margin="757,2,7,64" Grid.Column="1" RenderTransformOrigin="0.801,0.707" Grid.RowSpan="2"/>
        <Image Source="\resources\Images\Upgrades\AutoMunt.png" Margin="757,4,7,44" Grid.Column="1" Grid.Row="1"/>
        <Image x:Name="Wiel" Source="\resources\Images\Upgrades\Wiel.png" Margin="315,57,315,167" Grid.Column="1" Grid.Row="2" Grid.RowSpan="2"/>
        <Image x:Name="Motor" Source="\resources\Images\Upgrades\motor.png" Margin="81,57,579,168" Grid.Column="1" Grid.Row="2" Grid.RowSpan="2"/>
        <Image x:Name="Suspensie" Source="\resources\Images\Upgrades\Suspensie.png" Margin="557,56,73,168" Grid.Column="1" Grid.Row="2" RenderTransformOrigin="0.762,0.881" Grid.RowSpan="2"/>

    </Grid>

</Window>