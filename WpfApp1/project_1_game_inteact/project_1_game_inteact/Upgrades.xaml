<Window x:Class="project_1_game_inteact.Upgrades"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project_1_game_inteact"
        mc:Ignorable="d"
        Title="Upgrades" Height="450" Width="800">
    <Grid Background="LightBlue" Margin="0,-18,-11,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="450"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="800"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Button x:Name="Startscherm" Margin="274,106,426,287" Click="StartschermClick" Background="Orange" Grid.Column="1">Startscherm</Button>
        <Button x:Name="Levels_Knop" Margin="405,106,295,287" Click="LevelsClick" Background="Orange" Grid.Column="1">Levels</Button>
        <Label x:Name="Geld" Margin="704,0,0,405" Content="Geld:" Background="Orange" Grid.Column="1"/>
        <Label x:Name="UpgradesTitel" Margin="274,30,295,328" Content="Upgrades" FontSize="50" Grid.Column="1"/>
        <Button Background="Orange" Margin="32,223,643,153" Content="Onderdeel 1" Grid.Column="1"/>
        <Button Background="Orange" Margin="201,223,474,153" Content="Onderdeel 2" Click="Button_Click_1" Grid.Column="1"/>
        <Button Background="Orange" Margin="449,223,226,153" Content="Onderdeel 3" Grid.Column="1"/>
        <Button Background="Orange" Margin="619,223,48,153" Content="Onderdeel 4" Click="Button_Click" Grid.Column="1"/>
        <Button Background="Orange" Margin="32,303,643,78" Content="Optie 1&#xD;&#xA;" Grid.Column="1"/>
        <Button Background="Orange" Margin="201,303,474,78" Content="Optie 2" Click="Button_Click_1" Grid.Column="1"/>
        <Button Background="Orange" Margin="449,303,226,78" Content="Optie 3" Grid.Column="1"/>
        <Button Background="Orange" Margin="619,303,48,78" Content="Optie 4" Click="Button_Click" Grid.Column="1"/>

        <Button x:Name="Speler_1_Knop" Background="Orange" Grid.Column="1" Margin="32,30,643,351" Click="Speler1Click">Speler 1</Button>
        <Button x:Name="Speler_2_Knop" Background="Orange" Grid.Column="1" Margin="33,30,643,351" Click="Speler2Click" Content="Speler 2"/>
    </Grid>
</Window>
